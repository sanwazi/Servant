<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:background="#ffffff">

    <com.loopj.android.image.SmartImageView
        android:id="@+id/imageView_list"
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:layout_marginLeft="15dp"
        android:src="@android:drawable/ic_menu_call" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/detail_name_list"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="Name"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="#000000"
            android:textSize="25sp"
            android:singleLine="true"/>

        <TextView
            android:id="@+id/detail_distance_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:text="2.5mile"
            android:layout_above="@+id/detail_comment_list"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"/>


        <RatingBar
            android:id="@+id/ratingBar_list"
            style="?android:attr/ratingBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/detail_name_list"
            android:layout_marginLeft="10dp"
            android:numStars="5"
            android:stepSize="0.5"/>

        <TextView
            android:id="@+id/detail_comment_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/detail_name_list"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@id/ratingBar_list"
            android:text="68 comment"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/detail_description_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ratingBar_list"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:text="Chinese Food" />


    </RelativeLayout>

</LinearLayout>